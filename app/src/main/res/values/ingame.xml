    <!-- Minimum and maximum radius (as percentage of the screen height) -->
    <fraction name="level_collision_min_radius">2.5%</fraction>
    <fraction name="level_collision_max_radius">15%</fraction>
    <!-- Minimum and maximum side length (as percentage of the screen height) -->
    <fraction name="level_collision_min_side">5%</fraction>
    <fraction name="level_collision_max_side">25%</fraction>
