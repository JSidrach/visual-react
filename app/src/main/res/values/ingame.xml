<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Match
    -->
    <!-- Probability of showing popup on exit/rematch -->
    <fraction name="match_popup_probability">30%</fraction>
    <!-- Milliseconds of pause between levels -->
    <integer name="match_pause_between_levels">3000</integer>
    <!-- Blink animation -->
    <integer name="match_blink_duration">1000</integer>
    <fraction name="match_blink_min_alpha">70%</fraction>
    <fraction name="match_blink_max_alpha">100%</fraction>


    <!--
        Levels
    -->

    <!-- LevelCollision -->
    <!-- Margin from the extremes (as a percentage of the screen width) -->
    <fraction name="level_collision_margin_extremes">5%</fraction>
    <!-- Minimum shape collision height (as a percentage of the screen height) -->
    <fraction name="level_collision_min_shape_collision_height">5%</fraction>
    <!-- Minimum and maximum percentage of the screen blocked (as a percentage of the screen width) -->
    <fraction name="level_collision_min_block_width">10%</fraction>
    <fraction name="level_collision_max_block_width">40%</fraction>
    <!-- Minimum and maximum radius (as percentage of the screen height) -->
    <fraction name="level_collision_min_radius">5%</fraction>
    <fraction name="level_collision_max_radius">20%</fraction>
    <!-- Minimum and maximum side length (as percentage of the screen height) -->
    <fraction name="level_collision_min_side">10%</fraction>
    <fraction name="level_collision_max_side">40%</fraction>
    <!-- Minimum and maximum time in milliseconds it takes a shape to go extreme to extreme horizontally -->
    <integer name="level_collision_min_move_time">1000</integer>
    <integer name="level_collision_max_move_time">15000</integer>
    <!-- Frames per second -->
    <integer name="level_collision_frames_per_second">30</integer>

    <!-- LevelColor -->
    <!-- Minimum and maximum milliseconds delay before switching color -->
    <integer name="level_color_min_delay">1000</integer>
    <integer name="level_color_max_delay">15000</integer>

    <!-- LevelConnection -->
    <!-- Cells grid -->
    <integer name="level_connection_cells_x">15</integer>
    <integer name="level_connection_cells_y">10</integer>
    <!-- Minimum and maximum step in milliseconds between updates -->
    <integer name="level_connection_min_delay">50</integer>
    <integer name="level_connection_max_delay">100</integer>
    <!-- Minimum and maximum probability of changing random cells instead of path cells -->
    <fraction name="level_connection_min_update_random">80%</fraction>
    <fraction name="level_connection_max_update_random">90%</fraction>
    <!-- Path width (as a percentage of the cell width) -->
    <fraction name="level_connection_path_width">25%</fraction>

    <!-- LevelCountdown -->
    <!-- Minimum and maximum starting numbers -->
    <integer name="level_countdown_min_start">6</integer>
    <integer name="level_countdown_max_start">15</integer>
    <!-- Minimum and maximum step in milliseconds between numbers -->
    <integer name="level_countdown_min_delay">500</integer>
    <integer name="level_countdown_max_delay">1500</integer>
    <!-- Minimum and maximum numbers starting which the countdown hides -->
    <integer name="level_countdown_min_hide">3</integer>
    <integer name="level_countdown_max_hide_offset">3</integer>

    <!-- LevelFit -->
    <!-- Minimum and maximum time in milliseconds it takes a shape to resize (from small to big or from big to small) -->
    <integer name="level_fit_min_resize_time">1000</integer>
    <integer name="level_fit_max_resize_time">10000</integer>
    <!-- Minimum and maximum side length (as percentage of the screen height) -->
    <fraction name="level_fit_min_side">12.5%</fraction>
    <fraction name="level_fit_max_side">37.5%</fraction>
    <!-- Percentage of minimum size difference between rectangular shapes (as percentage of the screen height) -->
    <fraction name="level_fit_min_diff">5%</fraction>
    <!-- Percentage of margin in the fit itself (as percentage of the screen height) -->
    <fraction name="level_fit_margin">10%</fraction>
    <!-- Stroke width (as a percentage of the screen height -->
    <fraction name="level_fit_stroke_width">2%</fraction>
    <!-- Frames per second -->
    <integer name="level_fit_frames_per_second">30</integer>

    <!-- LevelLight -->
    <!-- Cells grid -->
    <integer name="level_light_cells_x">30</integer>
    <integer name="level_light_cells_y">20</integer>
    <!-- Minimum and maximum step in milliseconds between updates -->
    <integer name="level_light_min_delay">5</integer>
    <integer name="level_light_max_delay">10</integer>
    <!-- Minimum and maximum probability of changing from dark to light -->
    <fraction name="level_light_min_dark_to_light">70%</fraction>
    <fraction name="level_light_max_dark_to_light">100%</fraction>
    <!-- Minimum and maximum probability of changing from light to dark -->
    <fraction name="level_light_min_light_to_dark">20%</fraction>
    <fraction name="level_light_max_light_to_dark">35%</fraction>
    <!-- Middle line width (as a percentage of the screen width) -->
    <fraction name="level_light_middle_line_width">1%</fraction>

    <!-- LevelLine -->
    <!-- Cells grid -->
    <integer name="level_line_cells">3</integer>
    <!-- Minimum and maximum step in milliseconds between updates -->
    <integer name="level_line_min_delay">750</integer>
    <integer name="level_line_max_delay">1500</integer>
    <!-- Width/height of the grid (as percentage of the minimum between screen width and screen height) -->
    <fraction name="level_line_grid_size">90%</fraction>
    <!-- Width of the separator between cells (as percentage of the grid size) -->
    <fraction name="level_line_separator_width">5%</fraction>
    <!-- Stroke width of the shapes (as percentage of the grid size) -->
    <fraction name="level_line_stroke_width">5%</fraction>
    <!-- Margin of the cell to the border of the grid (as percentage of the grid size) -->
    <fraction name="level_line_cell_margin">12.5%</fraction>
    <!-- Length of the cross (as a percentage of the length of the diagonal of the cell) -->
    <fraction name="level_line_cross_length">90%</fraction>
    <!-- Cross width (as a percentage of the cross length) -->
    <fraction name="level_line_cross_width">1.75%</fraction>

    <!-- LevelHole -->
    <!-- Minimum and maximum time in milliseconds it takes the circle to resize (from small to big or from big to small) -->
    <integer name="level_hole_min_resize_time">5000</integer>
    <integer name="level_hole_max_resize_time">15000</integer>
    <!-- Minimum and maximum hole radius (as percentage of the screen height) -->
    <fraction name="level_hole_min_hole_radius">5%</fraction>
    <fraction name="level_hole_max_hole_radius">12.5%</fraction>
    <!-- Minimum and maximum block width (as percentage of the hole radius) -->
    <fraction name="level_hole_block_width">70%</fraction>
    <!-- Minimum and maximum circle radius (as percentage of the screen height) -->
    <fraction name="level_hole_min_circle_radius">15%</fraction>
    <fraction name="level_hole_max_circle_radius">30%</fraction>
    <!-- Percentage of margin between the hole and the smallest circle (as percentage of the hole radius) -->
    <fraction name="level_hole_margin">50%</fraction>
    <!-- Frames per second -->
    <integer name="level_hole_frames_per_second">30</integer>

    <!-- LevelPair -->
    <!-- Number of shapes on the screen per row (top/bottom) -->
    <integer name="level_pair_shapes_per_row">4</integer>
    <!-- Top, middle and  bottom margin (as a percentage of the screen height) -->
    <fraction name="level_pair_vertical_margin">7.5%</fraction>
    <!-- Padding of the shape inside the cell (as a percentage of the minimum between cell width and height) -->
    <fraction name="level_pair_inside_padding">15%</fraction>
    <!-- Width of the rectangle (as a percentage of the rectangle height) -->
    <fraction name="level_pair_rectangle_width">75%</fraction>
    <!-- Size of the cross lines (thickness, as a percentage of the minimum between cell width and height) -->
    <fraction name="level_pair_cross_size">7.5%</fraction>
    <!-- Height of the head of the arrow (as a percentage of the cell height) -->
    <fraction name="level_pair_arrow_head_height">40%</fraction>
    <!-- Size of the arrow tail (thickness, as a percentage of the cell width) -->
    <fraction name="level_pair_arrow_tail_width">10%</fraction>
    <!-- Inner width of the moon (as a percentage of the outer width) -->
    <fraction name="level_pair_moon_inner_width">37.5%</fraction>
    <!-- Frames per second -->
    <integer name="level_pair_frames_per_second">30</integer>
    <!-- Minimum and maximum milliseconds for a shape to travel through the screen -->
    <integer name="level_pair_minimum_travel_time">5000</integer>
    <integer name="level_pair_maximum_travel_time">15000</integer>
    <!-- Minimum and maximum milliseconds before the new shapes that appear on the screen are random -->
    <integer name="level_pair_minimum_time_before_random_shapes">4000</integer>
    <integer name="level_pair_maximum_time_before_random_shapes">16000</integer>

    <!-- LevelPassage -->
    <!-- Minimum and maximum milliseconds delay before the common passage is available -->
    <integer name="level_passage_min_delay">3000</integer>
    <integer name="level_passage_max_delay">12500</integer>
    <!-- Number of passages -->
    <integer name="level_passage_num_passages">5</integer>
    <!-- Minimum and maximum trips each passage does before the common passage is available -->
    <integer name="level_passage_min_trips">1</integer>
    <integer name="level_passage_max_trips">3</integer>
    <!-- Height of the liens (as a percentage of the screen height) -->
    <fraction name="level_passage_line_height">5%</fraction>
    <!-- Minimum and maximum passage widths (as a percentage of the screen height) -->
    <fraction name="level_passage_min_passage_width">15%</fraction>
    <fraction name="level_passage_max_passage_width">40%</fraction>
    <!-- Margin for the passages from the extremes (as a percentage of the screen height) -->
    <fraction name="level_passage_margin">7.5%</fraction>
    <!-- Frames per second -->
    <integer name="level_passage_frames_per_second">30</integer>

    <!-- LevelSingular -->
    <!-- Cells grid -->
    <integer name="level_singular_cells_x">12</integer>
    <integer name="level_singular_cells_y">8</integer>
    <!-- Margin of eye rectangles to center of the cell (as percentage of the cell size) -->
    <fraction name="level_singular_margin_eye_x">7.5%</fraction>
    <fraction name="level_singular_margin_eye_y">7.5%</fraction>
    <!-- Length and width of the eye (as a percentage of the cell length and width, respectively) -->
    <fraction name="level_singular_eye_length">7.5%</fraction>
    <fraction name="level_singular_eye_width">20%</fraction>
    <!-- Length and width of the mouth (as a percentage of the cell length and width, respectively) -->
    <fraction name="level_singular_mouth_length">50%</fraction>
    <!-- Width of the separator between cells (as a percentage of the cell size) -->
    <fraction name="level_singular_line_width">2.5%</fraction>
    <!-- Width of the stroke of the mouth's paint (as a percentage of the cell size) -->
    <fraction name="level_singular_stroke_width">7.5%</fraction>
    <!-- Minimum and maximum step in milliseconds between updates -->
    <integer name="level_singular_min_delay">250</integer>
    <integer name="level_singular_max_delay">750</integer>
    <!-- Minimum and maximum probability of changing to sad face -->
    <fraction name="level_singular_min_change_face">2.5%</fraction>
    <fraction name="level_singular_max_change_face">5%</fraction>

    <!-- LevelVariety -->
    <!-- Cells grid -->
    <integer name="level_variety_cells_x">3</integer>
    <integer name="level_variety_cells_y">2</integer>
    <!-- Minimum and maximum probability to change a cell to a new color -->
    <fraction name="level_variety_min_change_color">65%</fraction>
    <fraction name="level_variety_max_change_color">85%</fraction>
    <!-- Minimum and maximum step in milliseconds between updates -->
    <integer name="level_variety_min_delay">500</integer>
    <integer name="level_variety_max_delay">1000</integer>
</resources>