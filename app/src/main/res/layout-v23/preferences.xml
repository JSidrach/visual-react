<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_title"
        android:text="@string/setting_title"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:allowUndo="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal" />

    <View
        android:id="@+id/horizontal_bar_setting"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#fafafa" />

    <CheckBox
        android:id="@+id/level_description"
        android:text="@string/check_description"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/description_SeekBar_Levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_seek_bar"
        android:textSize="20sp"
        android:paddingLeft="45dp"/>

    <SeekBar
        android:id="@+id/seekBar_Levels"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="5"/>

    <TextView
        android:id="@+id/values_seekBar_Levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/description_SeekBar_Rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/round_seek_bar"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingLeft="45dp"/>

    <SeekBar
        android:id="@+id/seekBar_Rounds"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="5"/>

    <TextView
        android:id="@+id/values_seekBar_Rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/levels_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/level_title"
            android:textSize="28sp" />

        <View
            android:id="@+id/horizontal_bar"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#fafafa"
            android:layout_below="@+id/levels_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>
